{
  "name": "git-permalink",
  "displayName": "Statusbar Copy Permalink",
  "description": "Adds status bar button for copying permalinks",
  "version": "0.0.3",
  "icon": "icon.png",
  "publisher": "akashgajjar",
  "repository": "github:skywalker212/git-permalink",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": [
    "vscode.git"
  ],
  "contributes": {
    "commands": [
      {
        "command": "git-permalink.copyPermalink",
        "title": "Copy Permalink"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceScheme == 'file' && git-permalink.isChecked",
          "command": "git-permalink.copyPermalink",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "^20.19.7",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}